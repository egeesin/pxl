<main
	id=js-postContainer
	class="s-cmsContent o-rustygrid{% if view == masonry %} -responsive{% endif %} -alignCenter"
	aria-label=Content
	data-path="{{ page.url | paginator_link }}"
	data-paginator-current="{{ pagination.pageNumber | plus:1}}"
	data-paginator-total="{{ items.size | divided_by: pagination.size | ceil }}"
	{%- comment -%}  itemprop=mainContentOfPage {%- endcomment -%}
	>
	{%- comment -%}  Prepare the markup if content container has masonry view. {%- endcomment -%}
	{%- if view == masonry -%}
	<div id=js-postContainerInner>
		<div class="o-rustygrid__masonryCol"></div>
		<div class="o-rustygrid__masonryCol"></div>
		<div class="o-rustygrid__masonryCol"></div>
		<div class="o-rustygrid__masonryCol"></div>
	{%- endif -%}
	{%- comment -%} Start the loop if there's any post in the defined collection. {%- endcomment -%}
	{%- if pagination.items.size > 0 -%}
		{%- comment -%} Loop for each posts in the defined collection {%- endcomment -%}
		{%- for post in pagination.items -%}
			{%- include 'post/item', post:post -%}
			{%- if forloop.first == true -%}
				{%- comment -%} If pagination has single page, include post/item straight forward. {%- endcomment -%}
				{%- comment %} {%- if pagination.pageNumber == 0 -%} {% endcomment -%}
				{%- comment %} 	{%- include 'post/item', post:post -%} {% endcomment -%}
				{%- comment %} {%- endif -%} {% endcomment -%}
			{%- else -%}
				{%- if forloop.last == true -%}
					{%- comment -%} Append markup here at the latest page.{%- endcomment -%}
				{%- endif -%}
			{%- endif -%}
		{%- endfor -%}
		{%- comment -%} {%- include 'item/{{ items_component | default: item.data.layout }}' -%}  {%- endcomment -%}
	{%- comment -%} If there's no post in the defined collection, give placeholder message. {%- endcomment -%}
	{%- else -%}
		<div class="o-box -viewCard -alignCenter">
			<p>No posts here yet…</p>
		</div>
	{%- endif -%}
	{%- if view == masonry -%}
		{%- comment -%} Ending wrapper here {%- endcomment -%}
		</div>
	{%- endif -%}
</main>
{%- comment -%} If contaier has more than one page, show "Load More…" button. {%- endcomment -%}
{%- if load_more_button == true -%}
	<button id=js-load-more-posts
			title="Loads more posts."
			itemprop=pagination
			class=js-paginator
			style=display:block;margin-inline:auto;padding-inline:1.25rem;position:relative>Load More…</button>
{%- endif -%}
