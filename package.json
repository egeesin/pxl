{
  "name": "pxl-theme",
  "version": "0.5.0",
  "description": "An adjustable framework-ish website theme with sensible defaults and nice looks.",
  "repository": "egeesin/pxl",
  "author": {
    "name": "Ege Esin",
    "email": "aegean@duck.com",
    "url": "egeesin.com"
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://egeesin.com/donate"
    },
    {
      "type": "patreon",
      "url": "https://patreon.com/egeesin"
    }
  ],
  "license": "GPL-3.0",
  "homepage": "https://pxl.egeesin.com",
  "keywords": [
    "css",
    "html",
    "theme",
    "css-framework",
    "customizable",
    "11ty",
    "SSG"
  ],
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    ">= .5% and not dead and not op_mini all"
  ],
  "scripts": {
    "start": "run-s build watch",
    "prebuild": "run-s clean mkdest",
    "clean": "rm -rf {tmp,dist}/",
    "mkdest": "mkdir -p {tmp,dist}/{static,plain} tmp/view dist/static/asset/font",
    "build": "BUILD_ENV=production run-s process lint",
    "process": "run-p -l move:* process:* compress:*",
    "move:font": "pnpm exec cpy \"static/asset/font/**/*.woff2\" dist/static/asset/font/",
    "move:gif": "pnpm exec cpy \"static/asset/**/*.gif\" dist/static/asset/",
    "process:page": "run-p process:page:*",
    "process:page:view": "pnpm exec eleventy --config=config/eleventy.js",
    "process:page:plain": "pnpm exec posthtml \"plain/**/*.html\" \"!plain/_include/**/*.html\" -o tmp/ -a -c config/posthtml.json",
    "process:style": "pnpm exec postcss \"static/style/index.css\" --config config/ --base static/style/ --dir tmp/static/style/",
    "compress:icon": "svg-sprite \"static/icon/**/*.svg\" --config config/svgsprite.json && pnpm exec svgo -i tmp/pi.svg -o dist/ --config config/svgo-sprite.js && node config/task/cheerio-sprite.js",
    "compress:img": "node config/task/sharp-compress.js",
    "compress:svg": "node config/task/svgo-compress.js",
    "lint": "run-p -l lint:*",
    "lint:script": "pnpm exec biome check --apply static/script/ --config-path=config/ --log-kind=compact --skip-errors",
    "lint:style": "pnpm exec stylelint \"tmp/static/style/**/*.css\" --config config/stylelint.json",
    "lint:page": "run-p lint:page:*",
    "lint:page:view": "pnpm exec html-validate \"tmp/view/**/*.html\" --config=config/html-validate.json",
    "lint:page:plain": "pnpm exec html-validate \"tmp/plain/**/*.html\" --config=config/html-validate.json",
    "postbuild": "run-p -l optimize:**",
    "clean:style": "pnpm exec purgecss --css \"tmp/static/style/**/*.css\" --content \"tmp/{view,plain}/**/*.html\" \"tmp/static/script/**/*.js\" -o \"tmp/static/style/\" --config config/purgecss.js",
    "optimize:style": "node config/task/postcss-extract-mq.js && node config/task/postcss-optimize.js",
    "optimize:page": "run-p optimize:page:*",
    "optimize:page:view": "pnpm exec posthtml \"**/*.html\" -o dist/ -a -r tmp/view -c config/posthtml-optimize.json && cpy \"tmp/view/**/*.{txt,xml,json,webmanifest}\" dist/ && cpy \"tmp/view/media/**/*\" dist/media/",
    "optimize:page:plain": "pnpm exec posthtml \"plain/**/*.html\" -o dist/ -a -r tmp/ -c config/posthtml-optimize.json",
    "optimize:script:vendor": "pnpm exec swc node_modules/{colcade/colcade.js,drkmd-js/dist/drkmd-js.min.js,lazysizes/lazysizes.min.js} -o dist/static/script/vendor.js --config-file config/swc.json",
    "optimize:script": "pnpm exec swc static/script/main.js -d dist/ --config-file config/swc.json",
    "watch": "run-p -l serve watch:*",
    "serve": "pnpm exec eleventy --serve --dryrun --output=dist/ --config=config/eleventy.js",
    "watch:page": "run-p watch:page:*",
    "watch:page:view": "pnpm exec chokidar --silent \"view/**/*.{html,xml,liquid,md,json,js,jpg,jpeg,tif,png,webp,gif,webm,svg}\" \"config/{eleventy.js,posthtml-optimize.json}\" -c \"run-s process:page:view lint:page:view optimize:page:view\"",
    "watch:page:plain": "pnpm exec chokidar --silent \"plain/**/*.html\" \"config/{html-validate,posthtml,posthtml-optimize}.json\" -c \"run-s process:page:plain lint:page:plain optimize:page:plain\"",
    "watch:style": "pnpm exec chokidar \"static/style/**/*.css\" \"config/{postcss.config.js,purgecss.js,stylelint.json}\" \"config/task/{postcss-extract-mq,postcss-optimize}.js\" -c \"run-s process:style lint:style optimize:style\"",
    "watch:script": "pnpm exec chokidar \"static/script/**/*.js\" \"config/{biome,swc}.json\" -c \"run-s lint:script optimize:script\"",
    "watch:img": "pnpm exec chokidar --silent \"static/asset/**/*.{jpeg,jpg,png,tif}\" \"config/task/sharp-compress.js\" -c \"pnpm run compress:img\"",
    "watch:svg": "pnpm exec chokidar --silent \"static/asset/**/*.svg\" \"config/{svgo.js,task/svgo-compress.js}\" -c \"pnpm run compress:svg\"",
    "watch:icon": "pnpm exec chokidar --silent \"static/icon/**/*.svg\" \"config/{svgo-sprite.js,svgsprite.js,task/cheerio-sprite.js}\" -c \"pnpm run compress:icon\"",
    "debug:11ty": "DEBUG=Eleventy* pnpm exec eleventy --dryrun --config=config/eleventy.js",
    "debug:11tyall": "DEBUG=* pnpm exec eleventy --dryrun --config=config/eleventy.js",
    "upmod": "pnpm up -i -L && pnpm exec update-browserslist-db"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@11ty/eleventy-img": "^3.1.8",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@biomejs/biome": "1.5.3",
    "@mightyplow/eleventy-plugin-cache-buster": "^1.1.3",
    "@swc/cli": "^0.3.5",
    "@swc/core": "^1.3.107",
    "@vrcd-community/markdown-it-video": "^1.1.1",
    "autoprefixer": "^10.4.17",
    "browserslist": "^4.22.3",
    "caniuse-lite": "^1.0.30001581",
    "cheerio": "1.0.0-rc.12",
    "chokidar-cli": "^3.0.0",
    "cpy-cli": "^5.0.0",
    "cssnano": "^6.0.3",
    "dotenv": "^16.4.1",
    "eleventy-plugin-typeset": "github:liamfiddler/eleventy-plugin-typeset",
    "html-validate": "^8.9.1",
    "htmlnano": "^2.1.0",
    "lodash.unionby": "^4.8.0",
    "markdown-it": "^14.0.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-collapsible": "^2.0.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-deflist": "^3.0.0",
    "markdown-it-eleventy-img": "^0.10.1",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-implicit-figures": "^0.12.0",
    "markdown-it-ins": "^4.0.0",
    "markdown-it-kbd": "^2.2.2",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-multimd-table": "^4.2.3",
    "markdown-it-named-code-blocks": "^1.0.4",
    "markdown-it-spoiler": "^1.1.1",
    "markdown-it-sub": "^2.0.0",
    "markdown-it-sup": "^2.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-toc-done-right": "^4.2.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.33",
    "postcss-brand-colors": "^3.0.0",
    "postcss-cli": "^11.0.0",
    "postcss-custom-media": "^10.0.2",
    "postcss-extract-media-query": "^3.0.0",
    "postcss-font-variant": "^5.0.0",
    "postcss-import": "^16.0.0",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-lightningcss": "^1.0.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.1",
    "postcss-obfuscator": "^1.6.0",
    "postcss-pseudo-class-any-link": "^9.0.1",
    "postcss-will-change": "^4.0.1",
    "posthtml": "^0.16.6",
    "posthtml-alt-always": "^1.0.1",
    "posthtml-classes": "^0.2.1",
    "posthtml-cli": "^0.10.0",
    "posthtml-include": "^1.7.4",
    "posthtml-lorem": "^1.0.0",
    "posthtml-md": "^1.1.0",
    "purgecss": "^5.0.0",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.33.2",
    "stylelint": "^16.2.0",
    "stylelint-config-recommended": "^14.0.0",
    "svg-sprite": "^2.0.2",
    "svgo": "^3.2.0",
    "terser": "^5.27.0",
    "truncate-html": "^1.0.4",
    "update-browserslist-db": "^1.0.13"
  },
  "dependencies": {
    "colcade": "^0.2.0",
    "drkmd-js": "^1.0.12",
    "lazysizes": "^5.3.2",
    "prism-themes": "^1.9.0",
    "sanitize.css": "^13.0.0"
  }
}
